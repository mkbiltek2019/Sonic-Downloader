<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="testApp.MainWindow"
        Title="testApp">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="40"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
    </Grid.RowDefinitions>
    <Panel Background="#2B2C34" x:Name="titlePane">
      <Border x:Name="winBorder1" BorderBrush="DeepPink" BorderThickness="0.5 0.5 0.5 0"/>
    </Panel>
    <Panel Grid.Row="2" Background="#1E1E24">
      <Border x:Name="winBorder2" BorderThickness="0.5 0 0.5 0.5" BorderBrush="DeepPink"/>
    </Panel>
  </Grid>
</Window>
