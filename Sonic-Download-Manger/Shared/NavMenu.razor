<MudLayout DrawerOpen="@DocsDrawerOpen">
    <MudDrawer>
        <MudDrawerHeader>
            <MudText Style="color:white" Typo="Typo.h6">Sonic Downlader</MudText>
        </MudDrawerHeader>
        <MudNavMenu Style="background-color: #1f1f1f">
            <MudNavLink Icon="@Icons.Material.Store" Style="color:white;" Href="#">Store</MudNavLink>
            <MudNavLink Icon="@Icons.Material.PhotoLibrary" Style="color:white" Href="#">Library</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Commute" Style="color:white" Href="#">Community</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Style="margin-top:-50px;">
        @ChildContent
    </MudMainContent>
</MudLayout>


@code {

    [Parameter]
    public RenderFragment ChildContent{ get; set; }
    bool DocsDrawerOpen = true;

}
